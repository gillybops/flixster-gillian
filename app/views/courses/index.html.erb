<br />

<div class="booyah-box col-10 offset-1">
  <h1 class="text-center">Learn Something Today</h1>
  <hr />

  <% @courses.each do |course| %>
    <h2 class="text-center">
      <%= link_to course.title, course_path(course) %>
      <br /><br />
        <% if course.image.present? %>
          <%= image_tag course.image, class: 'img-fluid', alt:"Responsive image" %>
        <% end %>
    </h2>
    <br />
    <div class="row">
      <div class="col-sm-8 offset-sm-2 col-12 text-center">
        <%= course.description %>
      </div>
      <div class="col-sm-4 offset-sm-4 col-12 text-center">
        <%= link_to 'More Details...', course_path(course), class: 'btn btn-primary btn-large' %>
      </div>
    </div>
    <hr />
    <br class="clr" />
  <% end %>
</div>